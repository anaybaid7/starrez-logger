{
  "manifest_version": 3,
  "name": "StarRez Package Logger",
  "version": "1.0",
  "description": "Auto-generates package log entries for CLV Front Desk",
  "permissions": [
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://uwaterloo.starrezhousing.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://uwaterloo.starrezhousing.com/StarRezWeb/Dashboard/*",
        "https://uwaterloo.starrezhousing.com/StarRezWeb/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
